{
  "name": "geartrade-mcp-server",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "serve": "node start-https-server.js",
    "serve:http": "node start-https-server.js --http-only",
    "simple": "node simple-server.js",
    "stream": "npx tsx local-server.ts",
    "stream:prod": "node dist/local-server.js",
    "test-stream": "curl -N http://localhost:8787/stream",
    "test-mcp": "curl -X POST http://localhost:8787/mcp -H 'Content-Type: application/json' -d '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"tools/list\",\"params\":{}}'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@nktkas/hyperliquid": "^0.27.1",
    "@nullshot/mcp": "latest",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "mem0ai": "^2.1.38",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "tsx": "^4.20.6",
    "typescript": "^5.0.0"
  }
}
