{
  "mcpServers": {
    "geartrade-local-stream": {
      "command": "bash",
      "args": [
        "/root/GEARTRADE/scripts/mcp-auto-start.sh"
      ],
      "env": {
        "AI_PROVIDER": "openrouter",
        "MODEL_ID": "openai/gpt-4-turbo",
        "OPENROUTER_API_KEY": "YOUR_OPENROUTER_API_KEY_HERE",
        "HYPERLIQUID_API_URL": "https://api.hyperliquid-testnet.xyz",
        "HYPERLIQUID_TESTNET": "true",
        "HYPERLIQUID_WALLET_API_KEY": "YOUR_HYPERLIQUID_PRIVATE_KEY_HERE",
        "HYPERLIQUID_ACCOUNT_ADDRESS": "YOUR_HYPERLIQUID_ADDRESS_HERE",
        "CANDLES_COUNT": "100"
      }
    }
  }
}

