{
  "name": "geartrade-mcp-server",
  "version": "1.0.0",
  "description": "GearTrade MCP Server - Comprehensive trading analysis and execution platform for Hyperliquid",
  "type": "mcp-server",
  "runtime": "nodejs",
  "entry": "dist/mcp-server/index.js",
  "transport": "stdio",
  "capabilities": {
    "tools": true,
    "resources": true,
    "prompts": true
  },
  "metadata": {
    "author": "GearTrade",
    "homepage": "https://github.com/FajarArrizki/ai-trading-mcp-server",
    "repository": "https://github.com/FajarArrizki/ai-trading-mcp-server.git",
    "license": "MIT"
  },
  "environment": {
    "required": [],
    "optional": [
      "HYPERLIQUID_ACCOUNT_ADDRESS",
      "HYPERLIQUID_WALLET_API_KEY",
      "AI_PROVIDER",
      "AI_PROVIDER_API_KEY",
      "MODEL_ID",
      "HYPERLIQUID_API_URL",
      "CYCLE_INTERVAL_MS",
      "PAPER_CAPITAL"
    ],
    "note": "Credentials can be provided as tool parameters (accountAddress, walletApiKey) or via environment variables. Each user can use their own credentials."
  },
  "deployment": {
    "platform": "cloudflare",
    "region": "auto",
    "workers": {
      "name": "geartrade-mcp-server",
      "compatibility_date": "2024-01-01",
      "compatibility_flags": ["nodejs_compat"]
    }
  }
}

